<% layout('layouts/boilerplate') %>


<div class="row">
    <div class="col-6 offset-3">
        <div class="card" >

            <img src="<%= events.eventimage %>" class="card-img-top" alt="Image">
            
            <div class="card-body">
              <h5 class="card-title"><%= events.title %></h5>
              <p class="card-text"><%= events.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><%= events.date %></li>
              <li class="list-group-item"><%= events.duration %></li>
             
              <!--<li class="list-group-item"><= events.zoomlink %></li>-->
              <a id="zoomLinkAnchor" href="<%= events.zoomlink  %>" class="card-link btn btn-info">Click to Join Zoom Meeting</a>
            </ul>

            
            <% if(currentUser._id== '64b4881de5fd48f8dc06b142') {%>

              <div class="card-body">
                <a href="/events/<%= events._id %>/edit" class="card-link btn btn-info">Edit</a>           
            
                <form class="d-inline" action="/events/<%=events._id %>?_method=DELETE" method="POST">
                  <button class="btn btn-success">Delete</button>    
                </form>           
              </div>
            
            <%} %>         
          
            <div class="card-footer">
                <a href="/events">Back To Events</a>

            </div>
        </div>
    </div>

</div>

