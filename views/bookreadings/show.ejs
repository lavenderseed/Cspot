<% layout('layouts/boilerplate') %>


<div class="row">
    <div class="col-6 offset-3">
        <div class="card" >

            <img src="<%= bookreadings.bookimage %>" class="card-img-top" alt="Image">
            
            <div class="card-body">
              <h5 class="card-title"><%= bookreadings.title %></h5>
              <p class="card-text"><%= bookreadings.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><%= bookreadings.date %></li>
              <li class="list-group-item"><%= bookreadings.duration %></li>
             
              <!--<li class="list-group-item"><= events.zoomlink %></li>-->
              <a id="bookLinkAnchor" href="<%= bookreadings.link  %>" class="card-link btn btn-info">Click to Join Book Readingroom</a>
            </ul>

            
            <% if(currentUser._id== '64b4881de5fd48f8dc06b142') {%>

              <div class="card-body">
                <a href="/bookreadings/<%= bookreadings._id %>/edit" class="card-link btn btn-info">Edit</a>           
            
                <form class="d-inline" action="/bookreadings/<%=bookreadings._id %>?_method=DELETE" method="POST">
                  <button class="btn btn-success">Delete</button>    
                </form>           
              </div>
            
            <%} %>         
          
            <div class="card-footer">
                <a href="/bookreadings">Back To Book Readingroom</a>

            </div>
        </div>
    </div>

</div>