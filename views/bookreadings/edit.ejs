

<%layout('layouts/boilerplate')%>


<div class="row">
    <h1 class="text-center">Edit Book</h1>
    <div class="col-6 offset-3">
        <form action="/bookreadings/<%= bookreadings._id %>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-lable" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="bookreadings[title]" value="<%= bookreadings.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
        
            <div class="mb-3">
                <label class="form-lable" for="date">Date</label>
                <input class="form-control" type="text" id="date" name="bookreadings[date]" value="<%= bookreadings.date %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
        
            <div class="mb-3">
                <label class="form-lable" for="duration">Duration</label>
                <input class="form-control" type="text" id="duration" name="bookreadings[duration]" value="<%= bookreadings.duration %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
        
            <div class="mb-3">
                <label class="form-lable" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="bookreadings[description]" required><%= bookreadings.description %></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-lable" for="link">Link</label>
                <input class="form-control" type="text" id="link" name="bookreadings[link]" value="<%= bookreadings.link %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            
            <div class="mb-3">
                <label class="form-lable" for="bookimage">Image Url</label>
                <input class="form-control" type="text" id="bookimage" name="bookreadings[bookimage]" value="<%= bookreadings.bookimage %>"required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <button class="btn btn-info">Update Book</button>
            </div>
        </form>

        <div class="mb-3">
            <a href="/bookreadings">Back To Books</a>
        </div>

    </div>
</div>